<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.ums_engg1420.studentsmodule.UserStudentController"
            prefHeight="600.0" prefWidth="800.0">

    <!-- Root Layout -->
    <VBox spacing="20" alignment="TOP_CENTER" AnchorPane.topAnchor="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">

        <!-- Title Header -->
        <Label text="Student Event Calendar"
               style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <!-- Calendar Picker and Action Section -->
        <HBox spacing="15" alignment="CENTER">
            <!-- Date Picker -->
            <DatePicker fx:id="calendarPicker" promptText="Select a Date"/>

            <!-- Button to View Events -->
            <Button fx:id="btnViewEvents" text="View Events" onAction="#viewEvents"/>
        </HBox>

        <!-- Event Display Section -->
        <VBox spacing="10" VBox.vgrow="ALWAYS" alignment="TOP_CENTER" prefWidth="750.0">
            <!-- Notifications for the selected date -->
            <Label fx:id="selectedDateLabel" text="Events for: "
                   style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

            <!-- Scrollable area for listing events -->
            <ScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" prefHeight="400.0">
                <VBox fx:id="eventContainer" spacing="10" alignment="TOP_LEFT" prefWidth="750.0">
                    <!-- Add dynamic content here -->
                </VBox>
            </ScrollPane>
        </VBox>
    </VBox>
</AnchorPane>