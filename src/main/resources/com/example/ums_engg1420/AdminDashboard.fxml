<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ums_engg1420.AdminDashboardController">
    <children>
        <Label text="Admin Dashboard - Subject Management" />
        <HBox spacing="5">
            <TextField fx:id="subjectCodeField" promptText="Subject Code"/>
            <TextField fx:id="subjectNameField" promptText="Subject Name"/>
            <Button text="Add Subject" onAction="#addSubject"/>
        </HBox>
        <TableView fx:id="subjectsTable">
            <columns>
                <TableColumn fx:id="codeColumn" text="Code"/>
                <TableColumn fx:id="nameColumn" text="Name"/>
            </columns>
        </TableView>
        <HBox spacing="10">
            <Button text="Edit Subject" onAction="#editSubject"/>
            <Button text="Delete Subject" onAction="#deleteSubject"/>
        </HBox>
    </children>
</VBox>
