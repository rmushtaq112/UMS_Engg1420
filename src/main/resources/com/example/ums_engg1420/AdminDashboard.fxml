<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.ums_engg1420.AdminDashboardController">

    <left>
        <VBox spacing="10" style="-fx-background-color: #2C3E50; -fx-padding: 10;" prefWidth="200">
            <Label text="Admin Panel" style="-fx-text-fill: white; -fx-font-size: 16px;"/>
            <Button text="Dashboard" fx:id="btnDashboard" style="-fx-background-color: #3498DB; -fx-text-fill: white;"/>
            <Button text="Student Management" fx:id="btnStudentManagement" style="-fx-background-color: #3498DB; -fx-text-fill: white;"/>
            <Button text="Course Management" fx:id="btnCourseManagement" style="-fx-background-color: #3498DB; -fx-text-fill: white;"/>
            <Button text="Faculty Management" fx:id="btnFacultyManagement" style="-fx-background-color: #3498DB; -fx-text-fill: white;"/>
            <Button text="Event Management" fx:id="btnEventManagement" style="-fx-background-color: #3498DB; -fx-text-fill: white;"/>
            <Button text="Subject Management" fx:id="btnSubjectManagement" style="-fx-background-color: #3498DB; -fx-text-fill: white;"/>
            <Button text="Logout" fx:id="btnLogout" style="-fx-background-color: #E74C3C; -fx-text-fill: white;"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="mainContent" style="-fx-padding: 20;">
            <Label text="Welcome, Admin!" fx:id="lblWelcome" style="-fx-font-size: 18px;"/>
        </StackPane>
    </center>

</BorderPane>
