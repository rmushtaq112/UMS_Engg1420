<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.ums_engg1420.LoginController"
      style="-fx-background-color: #f4f4f4; -fx-padding: 20px; -fx-border-radius: 15px; -fx-background-radius: 15px;">
    <children>
        <!-- Username Label -->
        <Label text="Username:" style="-fx-font-size: 14px; -fx-text-fill: #333; -fx-font-weight: bold;" />
        <TextField fx:id="userField"
                   style="-fx-pref-width: 250px; -fx-pref-height: 35px; -fx-background-radius: 10px;
                          -fx-border-radius: 10px; -fx-border-color: #ccc; -fx-border-width: 1px;
                          -fx-padding: 5px; -fx-font-size: 14px;" />

        <!-- Password Label -->
        <Label text="Password:" style="-fx-font-size: 14px; -fx-text-fill: #333; -fx-font-weight: bold;" />
        <PasswordField fx:id="passField"
                       style="-fx-pref-width: 250px; -fx-pref-height: 35px; -fx-background-radius: 10px;
                              -fx-border-radius: 10px; -fx-border-color: #ccc; -fx-border-width: 1px;
                              -fx-padding: 5px; -fx-font-size: 14px;" />

        <!-- Login Button -->
        <Button text="Login" onAction="#handleLogin"
                style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 14px;
                       -fx-padding: 8px 20px; -fx-border-radius: 10px; -fx-background-radius: 10px;
                       -fx-cursor: hand;" />

        <!-- Message Label -->
        <Label fx:id="messageLabel"
               style="-fx-text-fill: red; -fx-font-weight: bold;" />
    </children>
</VBox>
