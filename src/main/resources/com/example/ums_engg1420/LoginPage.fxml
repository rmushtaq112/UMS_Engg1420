<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ums_engg1420.LoginController">
    <children>
        <Label text="Username:" />
        <TextField fx:id="userField" />

        <Label text="Password:" />
        <PasswordField fx:id="passField" />

        <Button text="Login" onAction="#handleLogin" />
        <Label fx:id="messageLabel" />
    </children>
</VBox>
