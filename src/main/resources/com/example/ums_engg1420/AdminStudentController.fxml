<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="mainContent" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ums_engg1420.studentsmodule.AdminStudentController">
    <VBox spacing="10" alignment="TOP_CENTER">
        <!-- TableView for students -->
        <TableView fx:id="tblStudents" prefWidth="600" prefHeight="400">
            <!-- Name Column -->
            <columns>
                <TableColumn fx:id="colStuName" text="Name" prefWidth="150"/>
                <!-- ID Column -->
                <TableColumn fx:id="colStuID" text="ID" prefWidth="150"/>
                <!-- Profile Picture Column -->
                <TableColumn fx:id="colStuPic" text="Profile Picture" prefWidth="150"/>
                <!-- View Info Column -->
                <TableColumn fx:id="ViewInfoCol" text="View Info" prefWidth="150"/>
            </columns>
        </TableView>

        <!-- Optional View Info Button -->
        <Button fx:id="ViewInfo" text="View Info" prefWidth="100" visible="false"/>
    </VBox>
</StackPane>
